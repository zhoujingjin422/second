<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F8F9">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            app:navigationIcon="@mipmap/icon_back"
            app:title="Image Compressor"
            android:background="@color/white"
            app:titleTextColor="@color/black">
        </androidx.appcompat.widget.Toolbar>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iv_no"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/image_iv"
               android:layout_marginTop="20dp"
               android:layout_gravity="center_horizontal"/>
           <ImageView
               android:id="@+id/iv_result"
               android:layout_width="match_parent"
               android:layout_height="375dp"
               android:visibility="gone"
               android:layout_marginTop="10dp"/>
           <FrameLayout
               android:id="@+id/fl_detail"
               android:layout_width="match_parent"
               android:layout_height="28dp"
               android:background="#99000000"
               android:visibility="gone"
               android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tv_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="original：1035x1035 200kb"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
               <TextView
                   android:id="@+id/tv_after"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="after：1035x1035 30kB"
                   android:textColor="@color/white"
                   android:layout_marginEnd="10dp"
                   android:textSize="12sp"
                   android:layout_gravity="center_vertical|end"/>
           </FrameLayout>
       </FrameLayout>
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="level of image quality"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ll_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/high"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textColor="#FF7560"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="high"
                android:gravity="center"
                app:shape_radius="6dp"
                app:shape_strokeColor="#EB7A66"
                app:shape_strokeWidth="1dp"
                app:shape_solidSelectedColor="#EB7A66"
                app:shape_textSelectedColor="@color/white"
                app:shape_solidColor="@color/white"/>
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/medium"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textColor="#FF7560"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="medium"
                app:shape_radius="6dp"
                android:layout_marginStart="22dp"
                android:gravity="center"
                app:shape_strokeColor="#EB7A66"
                app:shape_strokeWidth="1dp"
                app:shape_textSelectedColor="@color/white"
                app:shape_solidSelectedColor="#EB7A66"
                app:shape_solidColor="@color/white"/>
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/low"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:textColor="#FF7560"
                android:textStyle="bold"
                android:textSize="16sp"
                app:shape_radius="6dp"
                app:shape_strokeWidth="1dp"
                app:shape_textSelectedColor="@color/white"
                app:shape_solidSelectedColor="#EB7A66"
                app:shape_strokeColor="#EB7A66"
                android:text="low"
                android:layout_marginStart="22dp"
                android:gravity="center"
                app:shape_solidColor="@color/white"/>
        </LinearLayout>
        <com.hjq.shape.view.ShapeButton
            android:id="@+id/add_save"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:shape_radius="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="25dp"
            android:text="Add Image"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:shape_solidColor="#F08A70"/>
    </LinearLayout>
</layout>
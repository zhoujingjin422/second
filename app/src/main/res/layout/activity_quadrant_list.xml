<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3548EA"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:navigationIcon="@drawable/icon_back"
            android:paddingBottom="20dp"
            android:layout_marginTop="@dimen/status_bar_height"
            app:title="Quadrant List"
            app:titleTextColor="@color/white"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <LinearLayout
                android:id="@+id/topLeftLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FEECE9"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/crossArea"
                app:layout_constraintEnd_toStartOf="@id/crossArea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F6A0A6"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:background="#FBE0DA"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Important and urgent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_iu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/topRightLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FAF4DD"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/crossArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/crossArea"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F0A85B"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:background="#FDEDD0"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Important but not urgent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_inu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLeftLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#E3F0FB"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/crossArea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/crossArea">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#90B0E4"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:background="#D7E8FE"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Urgent but not important"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_uni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomRightLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#E4F5DF"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/crossArea"
                app:layout_constraintTop_toBottomOf="@id/crossArea">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#94DDBC"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:background="#D2F1D9"
                    android:paddingBottom="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Neither important nor urgent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_nuni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:id="@+id/crossArea"
                android:layout_width="6dp"
                android:layout_height="6dp"
                app:layout_constraintBottom_toTopOf="@id/bottomLeftLayout"
                app:layout_constraintEnd_toStartOf="@id/topRightLayout"
                app:layout_constraintStart_toEndOf="@id/topLeftLayout"
                app:layout_constraintTop_toBottomOf="@id/topLeftLayout" />

            <TextView
                android:id="@+id/fab"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:gravity="center"
                android:text="+"
                android:background="@drawable/circle_black"
                android:layout_marginEnd="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3548EA"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:navigationIcon="@drawable/icon_back"
            android:paddingBottom="20dp"
            android:layout_marginTop="@dimen/status_bar_height"
            app:title="New To-do Content"
            app:titleTextColor="@color/white">
            <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="10dp"
                android:src="@drawable/icon_right"/>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_start"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="to-do list content"
                    android:textColor="@color/c_333333"
                    android:gravity="start"
                    android:padding="8dp"
                    android:background="@drawable/shape_edit_white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#F6A0A6"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Important \nand urgent"
                        android:background="@drawable/shape_blue_selected"
                        android:checked="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#F0A85B"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Important but not urgent"
                        android:background="@drawable/shape_orange"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#90B0E4"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Urgent but not important"
                        android:background="@drawable/shape_blue_1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#94DDBC"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="Neither important nor urgent"
                        android:background="@drawable/shape_orange_1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingTop="20dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>